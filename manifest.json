{
  "manifest_version": 3,
  "name": "MA League Username Highlighter",
  "version": "1.0",
  "description": "Highlights your username in the MA League leaderboard",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.mathacademy.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 